{
  "manifest_version": 3,
  "name": "janet.ai",
  "version": "1.0.0",
  "description": "Friendly Chrome extension to help navigate webpages",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "js/request-perm.ts",
        "index.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "host_permissions": ["*://*/*"],
  "permissions": [
    "tabs",
    "sidePanel",
    "activeTab",
    "offscreen",
    "storage",
    "scripting",
    "system.display",
    "tabCapture",
    "unlimitedStorage"
  ]
}